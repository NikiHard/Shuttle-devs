<?xml version="1.0" encoding="utf-8"?>
<android.support.design.internal.ForegroundLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="?attr/list_selector"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="16dp"
        android:scaleType="fitCenter"
        android:visibility="invisible"
        tools:ignore="ContentDescription"
        tools:src="@drawable/ic_folder_multiple_24dp"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/line_one"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textColor="?android:textColorPrimary"
        android:textSize="14sp"
        tools:text="Folders"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="48dp">

        <com.simplecity.amp_library.ui.views.OverflowButton
            android:id="@+id/btn_overflow"
            android:layout_width="48dp"
            android:layout_height="44dp"
            android:background="@null"
            android:visibility="gone"
            tools:visibility="visible"/>

        <ImageView
            android:id="@+id/expandable_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            tools:ignore="ContentDescription"
            tools:src="@drawable/ic_arrow_up_24dp"
            tools:tint="#FFFFFF"/>

        <TextView
            android:id="@+id/timeRemaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:textColor="?colorPrimary"
            android:visibility="gone"
            tools:text="00:00"
            tools:visibility="visible"/>
    </FrameLayout>

</android.support.design.internal.ForegroundLinearLayout>