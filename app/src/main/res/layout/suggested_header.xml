<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:foreground="?attr/list_selector">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_toLeftOf="@+id/button"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textColor="?android:textColorPrimary"
                    android:textSize="18sp"
                    tools:text="Line one"/>

                <TextView
                    android:id="@+id/text2"
                    style="?attr/secondaryTextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textColor="?android:textColorSecondary"
                    android:textSize="16sp"
                    tools:text="Line two"/>
            </LinearLayout>

            <com.simplecity.amp_library.ui.views.SuggestedHeaderButton
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="16dp"
                android:contentDescription="@string/heading_more"
                android:elevation="0dp"
                android:gravity="center"
                android:minHeight="28dp"
                android:minWidth="72dp"
                android:text="@string/heading_more"
                android:textSize="12sp"/>
        </RelativeLayout>
    </FrameLayout>
</FrameLayout>