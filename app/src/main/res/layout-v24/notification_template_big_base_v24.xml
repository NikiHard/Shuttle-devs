<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:lines="1"
            android:textAppearance="@android:style/TextAppearance.Material.Notification.Title"
            tools:ignore="NewApi"
            tools:text="Ticks &amp; Leeches"/>

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:maxLines="1"
            android:textAppearance="@android:style/TextAppearance.Material.Notification"
            tools:ignore="NewApi"
            tools:text="Tool | Lateralus"/>

        <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/prev"
                style="@android:style/Widget.Material.Light.Button.Borderless.Small"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ripple_circular_light"
                android:contentDescription="@string/btn_prev"
                android:src="@drawable/ic_skip_previous_24dp"
                tools:tint="#757575"/>

            <ImageButton
                android:id="@+id/pause"
                style="@android:style/Widget.Material.Light.Button.Borderless.Small"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ripple_circular_light"
                android:contentDescription="@string/btn_play_pause"
                android:padding="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_pause_24dp"
                tools:tint="#757575"/>

            <ImageButton
                android:id="@+id/next"
                style="@android:style/Widget.Material.Light.Button.Borderless.Small"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ripple_circular_light"
                android:contentDescription="@string/btn_skip"
                android:src="@drawable/ic_skip_next_24dp"
                tools:tint="#757575"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/media_notification_expanded_image_max_size_v24"
        android:layout_height="@dimen/media_notification_expanded_image_max_size_v24"
        android:layout_gravity="end"
        android:background="@drawable/ic_placeholder_light_medium"
        android:minWidth="40dp"
        android:scaleType="centerCrop"/>

    <!-- Dummy holder for the 'close' button which doesn't exist above API 21-->
    <FrameLayout
        android:id="@+id/close"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"/>

</LinearLayout>